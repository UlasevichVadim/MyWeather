<PreferenceScreen xmlns:app="http://schemas.android.com/apk/res-auto">

    <PreferenceCategory
        app:icon="@drawable/ic_settings_screen_item_language"
        app:title="@string/language_header_preferences">

        <ListPreference
            app:key="language"
            app:title="@string/language_choose_setting_preferences"
            app:summary="@string/description_language"
            app:defaultValue="1"
            app:entries="@array/Language"
            app:entryValues="@array/Language"
            app:dialogTitle="@string/choose_language" />
    </PreferenceCategory>

</PreferenceScreen>